// src/ui/LevelSelection/levelData.ts

// Datos simples de cada nivel
export interface Level {
  id: number;
  name: string;
  description: string;
  difficulty: 'easy' | 'normal' | 'hard';
  song: string;
  bpm: number;
  requiredLevel: number;
}

// Lista de niveles disponibles
//Son datos randoms 
export function getLevels(): Level[] {
  return [
    {
      id: 1,
      name: "Beat Básico",
      description: "Aprende el ritmo fundamental",
      difficulty: "easy",
      song: "First Steps",
      bpm: 120,
      requiredLevel: 1
    },
    {
      id: 2, 
      name: "Flow Intermedio",
      description: "Sincopas y contratiempos",
      difficulty: "normal",
      song: "Syncopation Flow", 
      bpm: 140,
      requiredLevel: 2
    },
    {
      id: 3,
      name: "Ritmo Avanzado", 
      description: "Patrones complejos",
      difficulty: "hard",
      song: "Advanced Beats",
      bpm: 160,
      requiredLevel: 3
    }
  ];
}

// Verificar si un nivel está desbloqueado
export function isLevelUnlocked(level: Level, userLevel: number): boolean {
  return level.requiredLevel <= userLevel;
}