{
    "name": "syncopation-game",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc --noEmit && vite build && node scripts/copy-assets.js",
        "preview": "vite preview",
        "type-check": "tsc --noEmit",
        "deploy:vercel": "npm run build && vercel --prod",
        "deploy:netlify": "npm run build && netlify deploy --prod --dir=dist",
        "test": "vitest run tests/",
        "test:watch": "vitest watch tests/"
    },
    "dependencies": {
        "bootstrap": "^5.3.8",
        "phaser": "^3.90.0"
    },
    "devDependencies": {
        "@types/bootstrap": "^5.2.10",
        "@types/node": "^20.0.0",
        "copyfiles": "^2.4.1",
        "cpx": "^1.5.0",
        "fast-check": "^4.3.0",
        "typescript": "^5.0.0",
        "vite": "^7.2.2",
        "vite-plugin-static-copy": "^3.1.4",
        "vitest": "^4.0.9"
    }
}